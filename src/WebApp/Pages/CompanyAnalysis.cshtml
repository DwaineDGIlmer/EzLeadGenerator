@page
@model WebApp.Pages.CompanyAnalysisPage
@{
    ViewData["Title"] = "Company Summaries";
}

<style>
    body {
        background-color: #f4f6fb;
        font-family: 'Segoe UI', Arial, sans-serif;
    }

    .navbar {
        background: linear-gradient(90deg, #2b5876 0%, #4e4376 100%);
    }

    .navbar-brand, .nav-link {
        color: #fff !important;
    }

    .navbar-brand:hover, .nav-link:hover {
        color: #ffd700 !important;
    }

    .footer {
        background-color: #2b5876;
        color: #fff;
    }

    .footer a {
        color: #ffd700;
    }
    .card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 16px rgba(44,62,80,0.08);
        margin-bottom: 2rem;
        padding: 1.5rem 2rem;
    }
    .alert-info, .alert-warning {
        border-radius: 8px;
        box-shadow: 0 1px 4px rgba(44, 62, 80, 0.05);
        border-left: 5px solid #2b5876;
        background-color: #e3f2fd;
        color: #2b5876;
        margin-bottom: 1.5rem;
    }
    .table-bordered {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 1rem;
        border-radius: 8px;
        overflow: hidden;
    }
    .table-bordered th,
    .table-bordered td {
        border: 1px solid #e0e6ef !important;
        padding: 0.7rem 1rem;
        background: #fff;
    }
    .table-bordered th {
        background: #f4f6fb;
        color: #2b5876;
        font-weight: 600;
    }
    .result-title {
        font-weight: 600;
        color: #2b5876;
    }
    .badge.bg-primary-subtle {
        background-color: #e7f1ff;
        color: #0b5ed7;
        border-radius: 6px;
        padding: 0.25em 0.6em;
        font-size: 0.9em;
    }
    .pagination {
        margin: 1.5rem 0 0 0;
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        list-style: none;
        padding-left: 0;
    }
    .page-item .page-link {
        border-radius: 6px;
        border: 1px solid #e0e6ef;
        padding: 0.4rem 0.9rem;
        color: #2b5876;
        background: #f4f6fb;
        text-decoration: none;
        transition: background 0.2s;
    }
    .page-item.active .page-link,
    .page-item .page-link:hover {
        background: #2b5876;
        color: #fff;
        border-color: #2b5876;
    }
    .text-truncate-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    h1, h2, h3, h5 {
        color: #2b5876;
        font-family: 'Segoe UI', Arial, sans-serif;
    }

    .contacts-hover {
        position: relative;
        display: inline-block;
        cursor: pointer;
    }

    .contacts-hover .contacts-label {
        opacity: 0;
        position: absolute;
        left: 110%;
        top: 50%;
        transform: translateY(-50%);
        background: #2b5876;
        color: #fff;
        padding: 0.3em 0.8em;
        border-radius: 6px;
        white-space: nowrap;
        font-size: 1em;
        transition: opacity 0.2s;
        pointer-events: none;
        z-index: 2;
    }

    .contacts-hover:hover .contacts-label {
        opacity: 1;
        pointer-events: auto;
    }

    .sticky-pagination {
    position: sticky;
    top: 0;
    z-index: 10;
    background: #f4f6fb;
    padding-top: 1rem;
    }
    
    @@media (max-width: 900px) {
        .card {
            padding: 1rem 0.5rem;
        }
        .table-bordered th,
        .table-bordered td {
            font-size: 0.95rem;
            padding: 0.5rem 0.5rem;
        }
    }
</style>

@if (Model.CompanySummaries == null)
{
    <div class="alert alert-warning mb-4" role="alert">Company summaries is null.</div>
}
else if (!Model.CompanySummaries.Any())
{
    <div class="alert alert-warning mb-4" role="alert">No recent company information found.</div>
}
else
{
    <div>
        <!-- Top Pagination Bar -->
        <nav aria-label="Company pagination" class="mb-4 sticky-pagination">
            <ul class="pagination justify-content-center">
                @if (Model.PageNumber > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(Model.PageNumber - 1)">Previous</a>
                    </li>
                }
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" href="?page=@i">@i</a>
                    </li>
                }
                @if (Model.PageNumber < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(Model.PageNumber + 1)">Next</a>
                    </li>
                }
            </ul>
        </nav>
        @foreach (var company in Model.CompanySummaries)
        {
            @if (string.IsNullOrEmpty(company.Link))
            {
                <h3 class="mb-3">@company.CompanyName</h3>
            }
            else
            {
                <h3 class="mb-3"><a href="@company.Link" class="result-title text-decoration-none" target="_blank" rel="noopener">@company.CompanyName</a></h3>
            }

            @if (company.HierarchyResults.OrgHierarchy.Count > 0)
            {
                <div class="alert alert-info mb-4">
                    <div class="small text-muted mt-1 text-center">
                        <span class="contacts-hover">
                            <span style="font-size:1.8em;vertical-align:middle;">&#128101;</span>
                            <span class="contacts-label">Possible contacts at @Model.CompanyName.</span>
                        </span>
                        <table class="table-bordered" style="background: #e3f2fd; border-radius: 8px; box-shadow: none; margin: 1rem auto 0 auto;">
                            <thead>
                                <tr>
                                    <th style="background: #e3f2fd; color: #2b5876;">Title</th>
                                    <th style="background: #e3f2fd; color: #2b5876;">Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var division in company.HierarchyResults.OrgHierarchy)
                                {
                                    <tr>
                                        <td style="background: #e3f2fd;">@division.Title</td>
                                        <td style="background: #e3f2fd;">@division.Name</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info d-flex align-items-center mb-4" style="min-height:120px;">
                    <div class="w-100 text-center">
                        <span style="font-size:2em; color:#b0b8c1;">&#128100;</span>
                        <div class="mt-2" style="color:#b0b8c1;">No possible contacts found for @Model.CompanyName.</div>
                    </div>
                </div>
            }
            <div class="card mb-4">
                <table class="table-bordered">
                    <tbody>
                    @foreach (var sectionItem in Model.Sections)
                    {
                        @foreach (var item in sectionItem.Items)
                        {
                            <tr>
                                <td>
                                    <div>
                                        <a href="@item.Url" class="result-title text-decoration-none" target="_blank">
                                            @item.Title
                                        </a>
                                        <div class="small text-muted mt-1">
                                            <span class="me-2">@item.Source @item.DisplayedLink</span>
                                            @if (!string.IsNullOrEmpty(item.Date))
                                            {
                                                <span class="me-2">• @item.Date</span>
                                            }
                                            @if (!string.IsNullOrEmpty(item.Location))
                                            {
                                                <span class="me-2">• @item.Location</span>
                                            }
                                        </div>
                                        <div class="small text-secondary text-truncate-2 mt-1">
                                            @item.Snippet
                                        </div>
                                        <div class="mt-1">
                                            <span class="badge bg-light text-dark border me-1">@item.Type</span>
                                            @foreach (var tag in item.Tags)
                                            {
                                                <span class="badge bg-primary-subtle me-1">@tag</span>
                                            }
                                        </div>
                                        <details class="mt-1 small">
                                            <summary class="text-muted">More</summary>
                                            <div class="mt-1">
                                                <a class="small" href="@item.Url">@(new Uri(item.Url).Host)</a>
                                                @if (item.MustInclude is not null)
                                                {
                                                    <a class="small" href="@item.MustInclude.Link">@(new Uri(item.MustInclude.Link).Host)</a>
                                                }
                                            </div>
                                        </details>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
        }
    </div>
}