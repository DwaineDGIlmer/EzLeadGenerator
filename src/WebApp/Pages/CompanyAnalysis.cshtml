@page
@model WebApp.Pages.CompanyAnalysisPage
@{
    ViewData["Title"] = "Company Summaries";
}

<style>
    body {
        background-color: #f4f6fb;
        font-family: 'Segoe UI', Arial, sans-serif;
    }

    .card {
        background: #eef3f7 !important;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(44, 62, 80, 0.07);
        margin-bottom: 30px;
        padding: 24px 32px;
    }

    .alert-info, .alert-warning {
        border-radius: 8px;
        box-shadow: 0 1px 4px rgba(44, 62, 80, 0.05);
        border-left: 5px solid #2b5876;
        background-color: #e3f2fd;
        color: #2b5876;
    }

    table {
        background: #f4f6fb !important;
    }

    .alert-warning {
        border-left: 5px solid #ffd600;
        background-color: #fffde7;
        color: #6c757d;
    }

    h2, h3, h4 {
        color: #2b5876;
        font-family: 'Segoe UI', Arial, sans-serif;
    }

    @@media (max-width: 900px) {
        .card
        {
            padding: 16px 8px;
        }

        table, th, td {
            font-size: 0.95rem;
        }
    }
</style>

<h2 class="mt-4 mb-3">Possible Contacts</h2>
@if (Model.CompanySummaries == null)
{
    <div class="alert alert-warning mb-4" role="alert">Company summaries is null.</div>
}
else if (!Model.CompanySummaries.Any())
{
    <div class="alert alert-warning mb-4" role="alert">No recent company information found.</div>
}
else
{
    <div>
        @foreach (var company in Model.CompanySummaries)
        {
            <div class="card mb-4" >
                <h3 class="mb-3">@company.CompanyName</h3>
                <table table-bordered">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var division in company.HierarchyResults.OrgHierarchy)
                        {
                            <tr>
                                <td>@division.Title</td>
                                <td>@division.Name</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

    <nav aria-label="Company pagination" class="mt-4">
        <ul class="pagination justify-content-center">
            @if (Model.PageNumber > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="?page=@(Model.PageNumber - 1)">Previous</a>
                </li>
            }
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" href="?page=@i">@i</a>
                </li>
            }
            @if (Model.PageNumber < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="?page=@(Model.PageNumber + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>
}