@page
@model WebApp.Pages.CompanyAnalysisPage
@{
    ViewData["Title"] = "Company Analysis";
    Layout = null;
}
<!-- Foundational style sheet -->
<link rel="stylesheet" href="~/css/ezleadgenerator.styles.css" />

<style>
body {
    background-color: #f4f6fb;
    font-family: 'Segoe UI', Arial, sans-serif;
    min-height: 100vh;
    margin: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
}

.card {
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 4px 16px rgba(44,62,80,0.08);
    margin-bottom: 2rem;
    padding: 1.5rem 2rem;
}
</style>

@if (Model.CompanySummaries == null)
{
    <div class="alert alert-warning mb-4" role="alert">Company summaries is null.</div>
}
else if (!Model.CompanySummaries.Any())
{
    <div class="alert alert-warning mb-4" role="alert">No recent company information found.</div>
}
else
{
    <div>     
        @foreach (var company in Model.CompanySummaries)
        {
            @if (string.IsNullOrEmpty(company.Link))
            {
                <h2 class="mb-3">@company.CompanyName</h2>
            }
            else
            {
                <h2 class="mb-3"><a href="@company.Link" class="result-title text-decoration-none" target="_blank" rel="noopener">@company.CompanyName</a></h2>
            }

            @if (company.HierarchyResults.OrgHierarchy.Count > 0)
            {
                <div class="alert alert-info mb-4">
                    <div class="small text-muted mt-1 text-center">
                        <span class="icon-center" style="font-size:1.8em;vertical-align:middle;">&#128101;</span>
                        <div class="mt-2" style="color:#b0b8c1;">Possible contacts found for @company.CompanyName.</div>
                        <table class="table-bordered" style="background: #e3f2fd; border-radius: 8px; box-shadow: none; margin: 1rem auto 0 auto;">
                            <thead>
                                <tr>
                                    <th style="background: #e3f2fd; color: #2b5876; text-align: left;">Title</th>
                                    <th style="background: #e3f2fd; color: #2b5876; text-align: left;">Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var division in company.HierarchyResults.OrgHierarchy)
                                {
                                    <tr>
                                        <td style="background: #e3f2fd;">@division.Title</td>
                                        <td style="background: #e3f2fd;">@division.Name</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info d-flex align-items-center mb-4" style="min-height:120px;">
                    <div class="w-100 text-center">
                        <span class="icon-center" style="font-size:2em; color:#b0b8c1;">&#128100;</span>
                        <div class="mt-2" style="color:#b0b8c1;">No possible contacts found for @company.CompanyName.</div>
                    </div>
                </div>
            }
            <div class="card mb-4">
                <table class="table-bordered">
                    <tbody>
                    @foreach (var sectionItem in Model.Sections)
                    {
                        @foreach (var item in sectionItem.Items)
                        {
                            <tr>
                                <td>
                                    <div>
                                        <a href="@item.Url" class="result-title text-decoration-none" target="_blank">
                                            @item.Title
                                        </a>
                                        <div class="small text-muted mt-1">
                                            <span class="me-2">@item.Source @item.DisplayedLink</span>
                                            @if (!string.IsNullOrEmpty(item.Date))
                                            {
                                                <span class="me-2">• @item.Date</span>
                                            }
                                            @if (!string.IsNullOrEmpty(item.Location))
                                            {
                                                <span class="me-2">• @item.Location</span>
                                            }
                                        </div>
                                        <div class="small text-secondary text-truncate-2 mt-1">
                                            @item.Snippet
                                        </div>
                                        <div class="mt-1">
                                            <span class="badge bg-light text-dark border me-1">@item.Type</span>
                                            @foreach (var tag in item.Tags)
                                            {
                                                <span class="badge bg-primary-subtle me-1">@tag</span>
                                            }
                                        </div>
                                        <details class="mt-1 small">
                                            <summary class="text-muted">More</summary>
                                            <div class="mt-1">
                                                <a class="small" href="@item.Url">@(new Uri(item.Url).Host)</a>
                                                @if (item.MustInclude is not null)
                                                {
                                                    <a class="small" href="@item.MustInclude.Link">@(new Uri(item.MustInclude.Link).Host)</a>
                                                }
                                            </div>
                                        </details>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
            @if (Model.RelatedSearches != null && Model.RelatedSearches.Any())
            {
                <div class="card mb-4">
                    <h3 class="mb-3" style="color:#2b5876;">Related Searches</h3>
                    <table class="table table-bordered">
                        <tbody>
                        @foreach (var related in Model.RelatedSearches)
                        {
                            @if (!string.IsNullOrEmpty(related.Query) && !string.IsNullOrEmpty(related.Link))
                            {
                                <tr>
                                    <td>
                                        <div>                                                       
                                            <a href="@related.Link" target="_blank" rel="noopener" class="result-title text-decoration-none">
                                            @related.Query
                                         </a>                             
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                </div>            
            }
        }
    </div>
}