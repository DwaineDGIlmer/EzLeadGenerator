@page
@model WebApp.Pages.CompanyResearchModel
@{
    ViewData["Title"] = "Company Research";
}

<!-- Foundational style sheet -->
<link rel="stylesheet" href="~/css/ezleadgenerator.styles.css" />

<h2>The @Model.TotalCount companies found with Data Services openings in the Charlotte area</h2>

<!-- Show items for selected letter -->
<div class="items-section">
    @if(Model.Profiles.Any())
    {
        <div class="company-grid">
            @foreach (var item in Model.Profiles)
            {
                <div class="company-card">
                    <div class="company-card-header">
                        <h4>
                            <a href="@item.CompanyProfile.Link" target="_blank" class="company-link">
                                @item.CompanyProfile.CompanyName
                            </a>
                        </h4>
                    </div>
                    <div class="company-card-body">
                        <a href="CompanyAnalysis?page=@item.CurrentIndex" class="btn-research" target="_blank">Research</a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <h3>There are no companies to display at this time.</h3>
    }
</div>