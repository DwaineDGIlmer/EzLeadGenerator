@page
@model WebApp.Pages.IndexModel
@{
    ViewData["Title"] = "Job Summaries";
}

<style>
    body {
        background-color: #f4f6fb;
        font-family: 'Segoe UI', Arial, sans-serif;
    }

    .navbar {
        background: linear-gradient(90deg, #2b5876 0%, #4e4376 100%);
    }

    .navbar-brand, .nav-link {
        color: #fff !important;
    }

    .navbar-brand:hover, .nav-link:hover {
        color: #ffd700 !important;
    }
    .card {
        background: #eef3f7 !important;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(44, 62, 80, 0.07);
        margin-bottom: 30px;
        padding: 24px 32px;
    }
    .table-bordered {
        border: 1px solid #e0e6ef !important;
    }
    .table-bordered th,
    .table-bordered td {
        border: 1px solid #e0e6ef !important;
    }

    .alert-info, .alert-danger {
        border-radius: 8px;
        box-shadow: 0 1px 4px rgba(44, 62, 80, 0.05);
        border-left: 5px solid #2b5876;
        background-color: #e3f2fd;
        color: #2b5876;
    }

    .job-description {
        white-space: pre-line;
        font-family: 'Segoe UI', Arial, sans-serif;
        background: #eef3f7 !important;
        border-radius: 4px;
        padding: 8px 10px;
        margin-top: 4px;
        font-size: 1em;
        color: #222;
        font-weight: 400;
        display: block;
    }
</style>

<h2 class="mt-3 mb-2">Recent Job Listings</h2>

@if (Model.TotalCount > 0)
{
    <div class="alert alert-info d-flex align-items-center mb-4">
        <span class="me-2"><i class="bi bi-briefcase-fill"></i></span>
        <strong>@Model.TotalCount</strong>&nbsp;Data Engineer jobs found in the last 30 days
    </div>
}
@if (Model.JobSummaries == null)
{
    <div class="alert alert-danger mb-4">JobSummaries is null.</div>
}
else if (!Model.JobSummaries.Any())
{
    <div class="alert alert-info mb-4">No recent jobs found.</div>
}
else
{
    <div>
        @foreach (var job in Model.JobSummaries)
        {
            <div class="card mb-4">
                <h3 class="mb-3">@job.CompanyName</h3>
                <table class="table-bordered" style="width:100%">
                    <tbody>
                        <tr>
                            <th style="width: 160px;">Job Title</th>
                            <td>@job.JobTitle</td>
                        </tr>
                        <tr>
                            <th>Hiring Agency</th>
                            <td>@job.HiringAgency</td>
                        </tr>
                        <tr>
                            <th>Published</th>
                            <td>@job.PostedDate.ToString("MMM dd, yyyy")</td>
                        </tr>
                        <tr>
                            <th>Location</th>
                            <td>@job.Location</td>
                        </tr>
                        <tr>
                            <th>Division</th>
                            <td>@job.Division</td>
                        </tr>
                        <tr>
                            <th>Source Link</th>
                            <td>
                                <a href="@job.SourceLink" target="_blank" rel="noopener">
                                    @(new Uri(job.SourceLink).GetLeftPart(UriPartial.Authority))
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <th style="vertical-align: top;">Job Description</th>
                            <td><span class="job-description">@job.JobDescription</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        }
    </div>

    <nav aria-label="Job pagination" class="mt-4">
        <ul class="pagination justify-content-center">
            @if (Model.PageNumber > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="?page=@(Model.PageNumber - 1)">Previous</a>
                </li>
            }
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" href="?page=@i">@i</a>
                </li>
            }
            @if (Model.PageNumber < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="?page=@(Model.PageNumber + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>
}