@page
@model WebApp.Pages.IndexModel
@{
    ViewData["Title"] = "Job Summaries";
}

<!-- Foundational style sheet -->
<link rel="stylesheet" href="~/css/EzLeadGenerator.styles.css" />

<!-- Top Pagination Bar -->
<nav aria-label="Company pagination" class="mb-4 sticky-pagination">
    <ul class="pagination justify-content-center">
        @if (Model.PageNumber > 1)
        {
            <li class="page-item">
                <a class="page-link" href="?page=@(Model.PageNumber - 1)">Previous</a>
            </li>
        }
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                <a class="page-link" href="?page=@i">@i</a>
            </li>
        }
        @if (Model.PageNumber < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" href="?page=@(Model.PageNumber + 1)">Next</a>
            </li>
        }
    </ul>
</nav>
<h2 class="mb-4">Recent Job Listings</h2>
@if (Model.TotalCount > 0)
{
    <div class="alert alert-info d-flex align-items-center mb-4">
        <span class="me-2">&#128188;</span>
        <strong>@Model.TotalCount</strong>&nbsp;Data Engineer jobs found in the last 30 days
    </div>
}
@if (Model.JobSummaries == null)
{
    <div class="alert alert-danger mb-4">JobSummaries is null.</div>
}
else if (!Model.JobSummaries.Any())
{
    <div class="alert alert-info mb-4">No recent jobs found.</div>
}
else
{
    <div>
        @foreach (var job in Model.JobSummaries)
        {
            <div class="card mb-4">
                <h3 class="mb-3">@job.CompanyName</h3>
                <table class="table-bordered" style="background: #e3f2fd; border-radius: 8px; box-shadow: none;">
                    <tbody>
                        <tr>
                            <th style="background: #e3f2fd; color: #2b5876;">Job Title</th>
                             <td style="background: #e3f2fd;">@job.JobTitle</td>
                        </tr>
                        <tr>
                            <th style="background: #e3f2fd; color: #2b5876;">Hiring Agency</th>
                            <td style="background: #e3f2fd;">@job.HiringAgency</td>
                        </tr>
                        <tr>
                            <th style="background: #e3f2fd; color: #2b5876;">Published</th>
                            <td style="background: #e3f2fd;">@job.PostedDate.ToString("MMM dd, yyyy")</td>
                        </tr>
                        <tr>
                            <th style="background: #e3f2fd; color: #2b5876;">Location</th>
                            <td style="background: #e3f2fd;">@job.Location</td>
                        </tr>
                        <tr>
                            <th style="background: #e3f2fd; color: #2b5876;">Division</th>
                            <td style="background: #e3f2fd;">@job.Division</td>
                        </tr>
                        <tr>
                            <th style="background: #e3f2fd; color: #2b5876;">Source Link</th>
                            <td style="background: #e3f2fd;">
                                <a href="@job.SourceLink" target="_blank" rel="noopener">
                                    @(new Uri(job.SourceLink).GetLeftPart(UriPartial.Authority))
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <th style="vertical-align: top;">Job Description</th>
                            <td><span class="job-description">@job.JobDescription</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        }
    </div>
}
