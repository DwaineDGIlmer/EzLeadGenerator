<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
	  <TargetFramework>net8.0</TargetFramework>
	  <ImplicitUsings>enable</ImplicitUsings>
	  <Nullable>enable</Nullable>
	  <PackageReadmeFile>README.md</PackageReadmeFile>
	  <SignAssembly>True</SignAssembly>
	  <AssemblyOriginatorKeyFile>AIEventing.snk</AssemblyOriginatorKeyFile>
	  <Authors>dwaine.gilmer@protonmail.com</Authors>
	  <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
	  <GenerateDocumentationFile>True</GenerateDocumentationFile>
	  <Title>AI-Assisted .NET Lead Generator</Title>
	  <Description>Automated and straight forward method to generate thousands of high-quality leads.</Description>
	  <Copyright>Copyright Â© 2025 Dwain Gilmer - All rights reserved.</Copyright>
	  <PackageProjectUrl>https://github.com/DwaineDGIlmer/EzLeadGenerator</PackageProjectUrl>
	  <RepositoryUrl>https://github.com/DwaineDGIlmer/ExLeadGenerator</RepositoryUrl>
	  <RepositoryType>git</RepositoryType>
	  <PackageTags>logging</PackageTags>
	  <PackageLicenseExpression>MIT</PackageLicenseExpression>
	  <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
	  <UserSecretsId>9fed5ab1-ca9a-48ca-ba98-02198f96fcb1</UserSecretsId>
	  <Version>1.3.0</Version>
  </PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Azure.Data.Tables" />
		<PackageReference Include="Azure.Storage.Blobs" />
		<PackageReference Include="Chart.js" />
		<PackageReference Include="HtmlAgilityPack" />
	</ItemGroup>

  <ItemGroup>
    <Content Update="appsettings.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Application\Application.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

	<ItemGroup>
		<Using Include="Microsoft.AspNetCore.Mvc.RazorPages" />
		<Using Include="Microsoft.Extensions.Options" />
		<Using Include="Microsoft.AspNetCore.Mvc" />
		<Using Include="System.Text.Json" />
	</ItemGroup>

</Project>
